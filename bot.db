const sqlite3 = require("sqlite3").verbose();
const path = require("path");

const dbPath = path.join(__dirname, "bot.db"); // persistent database
const db = new sqlite3.Database(dbPath);

// Bank table
db.run(`CREATE TABLE IF NOT EXISTS bank (
    user_id TEXT PRIMARY KEY,
    balance INTEGER
)`);

// Scammer list table
db.run(`CREATE TABLE IF NOT EXISTS scammers (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    fb_link TEXT
)`);

// CheckTT / message counts
db.run(`CREATE TABLE IF NOT EXISTS message_counts (
    thread_id TEXT,
    user_id TEXT,
    count INTEGER,
    PRIMARY KEY(thread_id, user_id)
)`);
